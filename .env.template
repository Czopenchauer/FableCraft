# =============================================================================
# FableCraft Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
# =============================================================================

# =============================================================================
# PROJECT PATH (Required for Docker volume mounts)
# =============================================================================
# Set this to the absolute path of the FableCraft project directory.
# On Windows: Use forward slashes, e.g., C:/Users/yourname/FableCraft
# On Linux/macOS: Use the full path, e.g., /home/user/FableCraft
FABLECRAFT_PROJECT_PATH=

# =============================================================================
# LLM CONFIGURATION (Required)
# =============================================================================
LLM_API_KEY=your-api-key-here
LLM_MODEL=gemini/gemini-2.5-flash
LLM_PROVIDER=gemini
LLM_MAX_TOKENS=200000

# https://docs.cognee.ai/setup-configuration/llm-providers
# Alternative providers:
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4o
#
# LLM_PROVIDER=anthropic
# LLM_MODEL=claude-sonnet-4-20250514
#
# LLM_PROVIDER=custom
# LLM_MODEL=openai/your-model
# LLM_ENDPOINT=https://your-endpoint.com/api/v1

# Rate Limiting (recommended)
LLM_RATE_LIMIT_ENABLED=true
LLM_RATE_LIMIT_REQUESTS=50
LLM_RATE_LIMIT_INTERVAL=60

# =============================================================================
# EMBEDDING CONFIGURATION (Required)
# =============================================================================
EMBEDDING_PROVIDER=gemini
EMBEDDING_MODEL=gemini/gemini-embedding-001
EMBEDDING_API_KEY=your-api-key-here
EMBEDDING_DIMENSIONS=3072

# Alternative: Ollama (local)
# EMBEDDING_PROVIDER=ollama
# EMBEDDING_MODEL=qwen3-embedding:8b-q8_0
# EMBEDDING_ENDPOINT=http://host.docker.internal:11434/api/embed
# EMBEDDING_DIMENSIONS=4096
# HUGGINGFACE_TOKENIZER=Qwen/Qwen3-Embedding-8B

# Alternative: OpenAI
# EMBEDDING_PROVIDER=openai
# EMBEDDING_MODEL=text-embedding-3-large
# EMBEDDING_DIMENSIONS=3072

# =============================================================================
# DATABASE (Optional - defaults provided)
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres