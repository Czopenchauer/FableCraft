# =============================================================================
# GraphRag API Docker Environment - Static Defaults
# =============================================================================
# These values are used unless overridden in docker-compose.yml environment
# section or via the root .env file.
# =============================================================================

# Server
PORT=8111

# OpenTelemetry (configured for Docker network)
OTEL_EXPORTER_OTLP_ENDPOINT=http://aspire-dashboard:18889
OTEL_SERVICE_NAME=graph-rag-api

# Langfuse
LANGFUSE_PUBLIC_KEY=default
LANGFUSE_SECRET_KEY=default

# Other settings
TOKENIZERS_PARALLELISM=true
ENABLE_BACKEND_ACCESS_CONTROL=true
TELEMETRY_DISABLED=true

# Paths (pointing to mounted volumes - do not change)
DATA_ROOT_DIRECTORY=/app/cognee/data
SYSTEM_ROOT_DIRECTORY=/app/cognee/system
VISUALISATION_PATH=/app/visualization
