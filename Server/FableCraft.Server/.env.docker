# =============================================================================
# FableCraft Server Docker Environment
# =============================================================================
# Static defaults for Docker deployment.
# Connection strings are set in docker-compose.yml to use Docker service names.
# =============================================================================

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# OpenTelemetry (configured for Docker network)
OTEL_EXPORTER_OTLP_ENDPOINT=http://aspire-dashboard:18889
OTEL_SERVICE_NAME=fablecraft-server

# Application paths (pointing to mounted volumes)
FABLECRAFT_DATA_STORE=/app/data-store
FABLECRAFT_LOG_PATH=/app/logs/
DEFAULT_PROMPT_PATH=/app/prompts-root/Default

# Seq Exporters (optional - uncomment if using Seq)
# FABLECRAFT_EXPORTER_SEQ_TRACE_ENDPOINT=http://seq:5341/ingest/otlp/v1/traces
# FABLECRAFT_EXPORTER_SEQ_LOG_ENDPOINT=http://seq:5341

# =============================================================================
# Docker Configuration
# =============================================================================
Docker__SocketPath=unix:///var/run/docker.sock
Docker__UtilityImage=alpine:latest

# =============================================================================
# GraphService Configuration
# =============================================================================
GraphService__EvictionTime=00:10:00
GraphService__ImageName=fablecraft-graph-rag-api:latest
GraphService__ContainerNamePrefix=graph-rag-
GraphService__NetworkName=fablecraft-network
GraphService__BasePort=8111
GraphService__ContainerPort=8111
GraphService__MaxConcurrentContainers=10
GraphService__HealthEndpoint=/health
GraphService__HealthCheckTimeoutSeconds=60
GraphService__WorldbookVolumePrefix=kg-worldbook-
GraphService__AdventureVolumePrefix=kg-adventure-
GraphService__VolumeMountPath=/app/knowledge-graph

# Paths (these use container paths, host paths are set in docker-compose.yml)
GraphService__VisualizationPath=/app/visualization
GraphService__DataStorePath=/app/data-store
GraphService__ExportsPath=/app/exports
GraphService__LogsPath=/app/logs/graphrag
